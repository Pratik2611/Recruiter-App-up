<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table>
  <thead>
    <tr>
      <th>Application</th>
      <th>Current company</th>
      <th>Linkedin url</th>
      <th>Portfolio url</th>
      <th>Additional info</th>
      <th>Gender</th>
      <th>Race</th>
      <th>Veteran status</th>
      <th>Disability status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.application_id %></td>
        <td><%= application.current_company %></td>
        <td><%= application.linkedin_url %></td>
        <td><%= application.portfolio_url %></td>
        <td><%= application.additional_info %></td>
        <td><%= application.gender %></td>
        <td><%= application.race %></td>
        <td><%= application.veteran_status %></td>
        <td><%= application.disability_status %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Application', new_application_path %>
